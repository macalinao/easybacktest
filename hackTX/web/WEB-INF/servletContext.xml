<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <mvc:annotation-driven />
    
<!--     Bean for register, login service
   	<bean name="RegisterServiceBean" class="assign.services.RegisterService" />
   	<bean name="LoginServiceBean" class="assign.services.LoginService" />
   	<bean name="QueryServiceBean" class="assign.services.QueryService" /> -->
   	
   	 <!-- Instantiate the Constructor Instance thru bean -->
    <bean name="greetingsController" class="assign.controllers.PrimaryController">
<!--     	<property name="RegisterService" ref="RegisterServiceBean" />
    	<property name="LoginService" ref="LoginServiceBean" />
    	<property name="QueryService" ref="QueryServiceBean" /> -->
    </bean>
        

    <bean id="viewResolver"
        class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"
            value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />
    </bean>
        
</beans>
